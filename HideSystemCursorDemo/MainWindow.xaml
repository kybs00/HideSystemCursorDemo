<Window x:Class="SystemCursorDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button x:Name="HideButton" Click="HideButton_OnClick" Content="隐藏光标" Width="100" Height="30"></Button>
            <Button x:Name="ShowButton" Click="ShowButton_OnClick" Content="显示光标" IsEnabled="False" Width="100" Height="30" Margin="0 12 0 0"></Button>
        </StackPanel>
    </Grid>
</Window>
